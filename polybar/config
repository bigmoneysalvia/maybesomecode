scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev


[module/xwindow]
type = internal/xwindow
label = %title%
label-padding = 2
label-margin = 1
label-background = ${colors.third}
label-foreground = ${colors.foreground}


[module/i3]
type = internal/i3
index-sort = true


; Create click handler used to focus workspace
; Default: true
enable-click = true

; Create scroll handlers used to cycle workspaces
; Default: true
enable-scroll = true

; Wrap around when reaching the first/last workspace
; Default: true
wrapping-scroll = false

; Set the scroll cycle direction
; Default: true
reverse-scroll = true

; Use fuzzy (partial) matching on labels when assigning
; icons to workspaces
; Example: code;♚ will apply the icon to all workspaces
; containing 'code' in the label
; Default: false
fuzzy-match = true

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
label-mode-padding = 2
label-mode-margin = 1
label-mode-background = ${colors.highlight}
label-mode-foreground = ${colors.background}

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = 
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.highlight}
label-focused-padding = 2
label-focused-margin = 1

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-unfocused = 
label-unfocused-padding = 2
label-unfocused-margin = 1
label-unfocused-foreground = ${colors.foreground}
label-unfocused-background = ${colors.nine}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-visible = 
label-visible-underline = #555555
label-visible-padding = 4

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = 
label-urgent-foreground = ${colors.foreground-alt}
label-urgent-background = ${colors.background}
label-urgent-padding = 2
label-urgent-margin = 1

[module/cpu]
type = internal/cpu

; Seconds to sleep between updates
; Default: 1
interval = 0.5

Additional formatting

; Available tags:
;   <label> (default)
;   <bar-load>
;   <ramp-load>
;   <ramp-coreload>
#format = <ramp-coreload> <label>
format = <label>


; Available tokens:
;   %percentage% (default) - total cpu load
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = CPU %percentage%%
label-padding = 2
label-margin = 1
label-foreground = ${colors.background}
label-background = ${colors.nine}

[module/volume]
type = internal/volume


#format-volume = <bar-volume> <label-volume> <ramp-volume>
format-volume = <label-volume> <ramp-volume>
label-volume = VOL %percentage%%
label-volume-padding = 2
label-volume-margin = 1
label-volume-background = ${colors.twelve}
label-volume-foreground = ${colors.background}

bar-volume-width = 10
bar-volume-foreground = #aaff77
bar-volume-indicator = ▓
bar-volume-indicator-font = 6
bar-volume-fill = ▒
bar-volume-fill-font = 6
bar-volume-fill-font-style = bold
bar-volume-empty = ░
bar-volume-empty-font = 6


format-muted = <label-muted>
label-muted =   muted
label-muted-background = ${colors.twelve}
label-muted-foreground = ${colors.background}
label-muted-padding = 2
label-muted-margin = 1


[module/date]
type = internal/date
interval = 1

date = "%A %d %B"

time = %H:%M:%S

label = %date% %time%
label-padding = 2
label-margin = 1
label-foreground = ${colors.background}
label-background = ${colors.primary}



[module/powermenu]
type = custom/menu

format-spacing = 1

label-open-padding = 2
label-open-margin = 0
label-open = POWER
label-open-foreground = ${colors.foreground}
label-open-background = ${colors.eight}
label-close =  cancel
label-close-foreground = ${colors.foreground-alt}
label-close-background = ${colors.highlight}
label-separator = |
label-separator-foreground = ${colors.foreground}
label-separator-background = ${colors.highlight}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = systemctl reboot; mode "default"

menu-2-0 = power off
menu-2-0-exec = systemctl poweroff; mode "default"
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[settings]
screenchange-reload = true

[module/cmus]
